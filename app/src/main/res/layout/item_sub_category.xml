<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_sub_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp">

    <RelativeLayout
        android:id="@+id/layout_sub_cat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_sub_cat_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_white_radius_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_cat_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:textColor="@color/icon"
            android:textSize="48sp"
            tools:text="A" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_sub_cat_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_avatar"
            android:scaleType="fitXY"
            android:padding="4dp"
            android:visibility="gone"
            tools:visibility="gone" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sub_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/icon"
        android:textSize="14sp"
        android:padding="2dp"
        tools:text="Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_sub_cat_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>